<form action="/user/cart/add" method="post">
  <div class="product-container">
    <div class="product-image">
      <img src="/uploads/<%= product.productImage %>" alt="Product Image">
    </div>

    <div class="product-details">
      <h2><%= product.productName %></h2>
      <p><%= product.description %></p>

      <div class="price">
        ₹<%= product.price %>
        <% if (product.discount > 0) { %>
          <small>₹<%= (product.price - product.discount).toFixed(2) %></small>
        <% } %>
      </div>

      <div class="info-badges">
        <span>Category: <%= product.categoryId?.category || 'N/A' %></span>
        <span>SubCategory: <%= product.subCategoryId?.subCategory || 'N/A' %></span>
        <span>ExtraCategory: <%= product.extraCategoryId?.extraCategory || 'N/A' %></span>
        <span>Stock: <%= product.stock %></span>
        <span>Rating: <%= product.rating %> ⭐</span>
        <span>Gender: <%= product.gender %></span>

        <% product.sizes.forEach(size => { %>
          <span>Size: <%= size %></span>
        <% }); %>

        <% product.colors.forEach(color => { %>
          <span>Color: <%= color %></span>
        <% }); %>
      </div>

      <div style="margin-top: 20px;">
        <label for="quantity">Quantity:</label>
        <input type="number" name="quantity" id="quantity" value="1" min="1" max="<%= product.stock %>" required>
      </div>

      <!-- Hidden Inputs -->
      <input type="hidden" name="productId" value="<%= product._id %>">
      <input type="hidden" name="productName" value="<%= product.productName %>">
      <input type="hidden" name="productPrice" value="<%= product.price %>">
      <input type="hidden" name="productImage" value="<%= product.productImage %>">
      <input type="hidden" name="discount" value="<%= product.discount %>">

      <div class="btns">
        <button type="submit" class="add-to-cart">Add to Cart</button>
      </div>
    </div>
  </div>
</form>

