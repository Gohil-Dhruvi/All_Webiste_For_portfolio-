<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      padding: 30px;
    }
    .cart-table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 10px;
      overflow: hidden;
    }
    th, td {
      padding: 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #388e3c;
      color: white;
    }
    img {
      width: 80px;
      height: auto;
      border-radius: 5px;
    }
  </style>
</head>
<body>
  <h1>Your Shopping Cart</h1>
  <% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>
    <table class="cart-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
          <th>Discount</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td><img src="<%= item.productImage %>" alt=""></td>
            <td><%= item.productName %></td>
            <td>₹<%= item.productPrice %></td>
            <td>₹<%= item.discount %></td>
            <td>₹<%= (item.productPrice - item.discount) * item.quantity %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
