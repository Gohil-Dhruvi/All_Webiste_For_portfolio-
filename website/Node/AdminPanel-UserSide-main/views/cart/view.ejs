<div class="container mt-5">
  <h2 class="text-center mb-4" style="color: hotpink;">ðŸ›’ Your Shopping Cart</h2>

  <% if (cartItems.length === 0) { %>
    <div class="alert alert-warning text-center">Your cart is empty!</div>
  <% } else { %>
    <table class="table table-bordered text-center">
      <thead style="background-color: hotpink;" class="text-white">
        <tr>
          <th>Image</th>
          <th>Product</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Discount</th>
          <th>Total</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
        <% cartItems.forEach(item => { %>
          <tr>
            <td><img src="/uploads/<%= item.productImage %>" width="60" /></td>
            <td><%= item.productName %></td>
            <td><%= item.quantity %></td>
            <td>â‚¹<%= item.productPrice %></td>
            <td>â‚¹<%= item.discount %></td>
            <td>â‚¹<%= item.totalPrice.toFixed(2) %></td>
            <td>
              <a href="/cart/remove/<%= item.productId %>" class="btn btn-sm btn-danger">
                <i class="fas fa-trash"></i>
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-end">
      <h4 class="text-danger">Grand Total: â‚¹<%= grandTotal.toFixed(2) %></h4>
      <button class="btn btn-success">Proceed to Checkout</button>
    </div>
  <% } %>
</div>
